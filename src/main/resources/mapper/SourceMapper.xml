<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nkcs.avp.backend.mapper.SourceMapper">
    <select id="getSourceByDirectory" resultType="nkcs.avp.backend.domain.Source" parameterType="string">
        select * from `Source` where `directory` = #{directory}
    </select>
    <insert id="addSource" parameterType="nkcs.avp.backend.domain.Source">
        insert into `Source` value(#{code},#{directory});
    </insert>
</mapper>