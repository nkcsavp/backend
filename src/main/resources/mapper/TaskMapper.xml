<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nkcs.avp.backend.mapper.TaskMapper">
    <insert id="addTask" parameterType="nkcs.avp.backend.domain.Task">
        insert into `Task` value(#{uid},#{time},0,#{animation},#{sample},#{lang},#{mode},#{sid});
    </insert>
    <update id="updateTask" parameterType="nkcs.avp.backend.domain.Task">
        update `Task` set `status` = #{status}, `sid` = #{sid}, `animation` = #{animation}
        where `uid` = ${uid} and `time` = #{time}
    </update>
    <select id="getAllTaskById" parameterType="long" resultType="nkcs.avp.backend.domain.Task">
        select * from `Task` where `uid` = #{uid}
    </select>
</mapper>